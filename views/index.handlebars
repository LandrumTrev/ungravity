<h1>Items</h1>

<h2>Items that are not done</h2>

<ul>
  {{#each items}}
    {{#unless done}}
      <li>{{item}}</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Items that are done</h2>

<ul>
  {{#each items}}
    {{#if done}}
      <li>{{item}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add an Item</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Item Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="done">Done?</label><br>
    <input type="radio" name="done" value="1" checked> Done!<br>
    <input type="radio" name="done" value="0"> Not Done
  </div>

  <button type="submit">Add Item</button>
</form>
