<h1>Items</h1>

<h2>Items that are not done</h2>

<ul>
  {{#each items}}
    {{#unless done}}
      <li>{{item}}</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Items that are done</h2>

<ul>
  {{#each items}}
    {{#if done}}
      <li>{{item}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add an Item</h2>
<form class="create-form">

  <div class="form-group">
    <label for="new-item">Item Name:</label>
    <input type="text" id="new-item" name="item">
  </div>

